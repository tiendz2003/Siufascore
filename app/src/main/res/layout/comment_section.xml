<!-- layout_comments_section.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Comments Header -->
    <LinearLayout
        android:id="@+id/layoutCommentsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#1A1A1A"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_chat_bubble_24"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textCommentsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Live Chat"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Comments RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/layoutCommentsHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutCommentInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_comment" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyComments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerViewComments"
        app:layout_constraintBottom_toBottomOf="@id/recyclerViewComments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_chat_bubble_outline_24"
            android:layout_marginBottom="8dp"
            app:tint="#66FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có bình luận nào"
            android:textColor="#66FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy trở thành người đầu tiên bình luận"
            android:textColor="#44FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressLoadingMore"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:indeterminateTint="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutCommentsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/layoutCommentInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#1A1A1A"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageUserAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:padding="2dp"
            android:src="@drawable/outline_person_24"
            android:scaleType="centerCrop"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.App.CircleImageView"
            />

        <!-- Input Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Thêm bình luận..."
                android:textColorHint="#66FFFFFF"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:maxLines="3"
                android:inputType="textCapSentences|textMultiLine"
                android:imeOptions="actionSend" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Send Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="Gửi"
            app:fabSize="mini"
            app:backgroundTint="@color/purple"
            app:tint="@color/white"
            app:elevation="0dp"
            app:borderWidth="0dp"
            android:src="@drawable/outline_send_24"
            android:enabled="false"
            app:fabCustomSize="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>