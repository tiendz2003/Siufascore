<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <!-- Top Gradient Overlay -->
    <View
        android:id="@+id/topGradient"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/gradient_top_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bottom Gradient Overlay -->
    <View
        android:id="@+id/bottomGradient"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/gradient_bottom_overlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Center Play/Pause Button (Large) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCenterPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#80000000"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#33FFFFFF"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/imageCenterPlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/play_pause"
            android:src="@drawable/ic_play_arrow"
            app:tint="@android:color/white"
            tools:src="@drawable/ic_play_arrow" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Top Controls Row -->
    <LinearLayout
        android:id="@+id/layoutTopControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@android:color/white" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Live Stream - Manchester United vs Liverpool" />

        <!-- More Options -->
        <ImageButton
            android:id="@+id/buttonMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Lựa chọn "
            android:src="@drawable/baseline_more_vert_24"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Bottom Controls Container -->
    <LinearLayout
        android:id="@+id/layoutBottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Progress Bar -->
        <SeekBar
            android:id="@+id/seekBarProgress"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginBottom="8dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/seekbar_progress_youtube"
            android:thumb="@drawable/seekbar_thumb_youtube"
            android:thumbOffset="0dp"
            tools:progress="100" />

        <!-- Control Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Play/Pause (Small) -->
            <ImageButton
                android:id="@+id/buttonPlayPause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/play_pause"
                android:src="@drawable/ic_play_arrow"
                app:tint="@android:color/white" />




            <!-- Live Badge (for live streams) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLiveBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                app:cardBackgroundColor="#FF0000"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="LIVE"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Quality -->
            <TextView
                android:id="@+id/textQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="720p"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="720p" />

            <!-- Fullscreen -->
            <ImageButton
                android:id="@+id/buttonFullscreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Toàn màn hình"
                android:src="@drawable/outline_fullscreen_24"
                app:tint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressLoading"
        style="?android:attr/progressBarStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>